<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@color/primary"
    tools:context=".MainActivity">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Gani Ramadhan"
        android:gravity="center"
        android:padding="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/color3"
        android:background="@color/secondary"


        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/today" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:gravity="center"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/color3"
        android:background="@color/secondary"
        />


    <Button
        android:id="@+id/home"
        android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Home"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:textAlignment="center"
         android:drawableTop="@drawable/home"
        android:textColor="@color/white"
        android:backgroundTint="@color/secondary"
        />



    <Button
        android:id="@+id/about"
        android:onClick="about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="about"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:textAlignment="center"
        android:backgroundTint="@color/secondary"
        android:drawableTop="@drawable/about"/>



    <Button
        android:id="@+id/project"
        android:onClick="project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="project"
        android:backgroundTint="@color/secondary"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:textAlignment="center"
        android:drawableTop="@drawable/project"/>


    <Button
        android:id="@+id/contact"
        android:onClick="contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="contact"
        android:backgroundTint="@color/secondary"

        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:textAlignment="center"
        android:drawableTop="@drawable/contact"/>

    <Button
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="exit"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:textAlignment="center"
        android:onClick="exit"
        android:backgroundTint="@color/secondary"
        android:drawableTop="@drawable/exit"/>




</LinearLayout>
</ScrollView>



